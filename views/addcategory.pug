extends layout 
block content 
    h1.pb-3=title  
    if errors 
        each error in errors 
            .alert=error.msg
    form.row.g-3( action = "/categories/add" method='post')
        .mb-3.row
            label.col-sm-2.col-form-label Name:
            .col-sm-10
                input.form-control(type='text' name='name')
        .col-12
            button.btn.btn-primary(type='submit' name='submit' value='save') Save